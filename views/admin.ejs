        async function importarDadosReais() {
            if (!confirm('Tem certeza que deseja importar os dados reais do arquivo table.json? Esta opera√ß√£o pode demorar alguns minutos.')) {
                return;
            }

            try {
                const loadingMsg = document.createElement('div');
                loadingMsg.innerHTML = '<div style="position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); background: white; padding: 20px; border-radius: 10px; box-shadow: 0 4px 20px rgba(0,0,0,0.3); z-index: 10000;"><div class="spinner" style="margin: 0 auto 10px;"></div><p>Importando dados reais... Aguarde...</p></div>';
                document.body.appendChild(loadingMsg);

                const response = await fetch('/api/importar-dados-reais', {
                    method: 'POST',
                    credentials: 'include',
                    headers: {
                        'Authorization': 'Basic ' + btoa('admin:' + '<%= process.env.ADMIN_PASSWORD || "admin123" %>')
                    }
                });

                const result = await response.json();
                document.body.removeChild(loadingMsg);

                if (result.success) {
                    alert(`Importa√ß√£o conclu√≠da com sucesso!\n\nTotal processado: ${result.data.totalProcessed}\nSucessos: ${result.data.successCount}\nErros: ${result.data.errorCount}`);
                    // Atualizar dados na tela
                    carregarConfirmacoes();
                    carregarParticipantes();
                } else {
                    alert('Erro na importa√ß√£o: ' + result.message);
                }

            } catch (error) {
                // Remover loading se ainda existir
                const loadingMsg = document.querySelector('div[style*="position: fixed"]');
                if (loadingMsg) {
                    document.body.removeChild(loadingMsg.parentElement);
                }
                alert('Erro na importa√ß√£o: ' + error.message);
            }
        }

